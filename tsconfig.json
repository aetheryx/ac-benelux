{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "exclude": [
    "discord-api-types/"
  ],

  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "CommonJS",
    "target": "es2020",
    "baseUrl": ".",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "paths": {
      "@acbot/util/*": ["src/util/*"],
      "discord-api-types": ["discord-api-types/v8"]
    }
  }
}
